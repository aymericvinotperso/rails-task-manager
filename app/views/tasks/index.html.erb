<h2>My tasks</h2>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed == true %>
    <i class='far fa-check-circle'></i>
    <% else %>
    <i class='far fa-circle'></i>
    <% end %>
    <%= "#{task.title}" %> -
    <%= link_to('See task', task_path(task)) %>
    <%= link_to('Destroy task', task_path(task), method: :delete) %>
  </li>
  <% end %>
</ul>

<p>
  <%= link_to('Create a new task', new_task_path ) %>
</p>
